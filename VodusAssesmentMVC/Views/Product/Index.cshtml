@model List<VodusAssesmentMVC.Models.Product>

<style>
    a {
        box-shadow: none;
        color:none;
    }

        a:hover {
            box-shadow: none;
            color: none;
        }
</style>

<h4 class="text-center">Available products</h4>
<br/>

<div style="text-align: right">
    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Create"><button class="btn btn-primary">+ Product</button></a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-center" scope="col" style="border-top:none">No.</th>
            <th scope="col" style="border-top:none">Product Name</th>
            <th scope="col" style="border-top:none">Description</th>
            <th scope="col" style="border-top:none">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row" class="text-center">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
            </tr>
        }
    </tbody>
</table>